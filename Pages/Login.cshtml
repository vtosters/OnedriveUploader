@page
@model OnedriveUploader.Pages.Login

@{
    Layout = Layout;
}

<!DOCTYPE html>

<form method="post">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="col-auto">
            <div class="form-group">
                <label asp-for="Password" class="col-md-2">Пароль</label>
                <div>
                    <input asp-for="Password"/>
                </div>
            </div>
            <div>
                <a href="https://youtu.be/dQw4w9WgXcQ">@Model.Message</a>
            </div>
            <div class="form-group mt-1">
                <button class="btn btn-outline-primary">Войти</button>
            </div>
        </div>
    </div>
</form>